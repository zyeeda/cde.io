<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm/orm_2_0.xsd"
    version="2.0">

    <named-query name="findRolesByAccountId">
        <query>
            select distinct r from Role r left join r.accounts ac left join fetch r.permissions pe where ac.id = :id
        </query>
    </named-query>

</entity-mappings>
