<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm/orm_2_0.xsd"
        version="2.0">
    <named-query name="findDownstreamTasks">
        <query>
            from Task t
            where t.processInstanceId = :processInstanceId and t.createdOn > :createdOn
            order by t.createdOn
        </query>
    </named-query>
</entity-mappings>