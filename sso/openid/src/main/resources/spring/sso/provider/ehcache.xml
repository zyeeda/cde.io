<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        ">

    <bean id="signInTokenCacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean" />

    <bean id="signInTokenCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean"
        p:cacheManager-ref="signInTokenCacheManager"
        p:cacheName="signInTokenCache" />

</beans>
